<%= form_for([@training, @training.reviews.new]) do |f| %>

	<div id="user_stars"></div>

	<%= f.text_field :comment %>

	<%= f.hidden_field :training_id, value: @training.id %>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>

<script>
	$('user_stars').raty({
		path:  '/assets',
		scoreName: 'review[star]',
		score: 1
	});
</script>