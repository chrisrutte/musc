<%= form_tag search_path, method: :get do %>
<div class="row">
	<div class="col-md-4">
	<%= text_field_tag :search, params[:search], placeholder: "Waar ga je trainen?", class: "form-control" %>
	</div>

	<div class="col-md-2">
	<%= text_field_tag :startdate, params[:startdate], placeholder: "Van", class: "form-control" %>
	</div>

	<div class="col-md-2">
	<%= text_field_tag :enddate, params[:enddate], placeholder: "Tot", class: "form-control" %>
	</div> 	 

	<div class="col-md-2">
	<%= submit_tag "Search", class: "btn btn-primary" %>
	</div>
</div>
<% end %>

<br>

<div class="row">
<% @trainings.each do |training| %>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading preview">
				<%= image_tag training.photos[0].image.url(:medium) if training.photos.length > 0 %>
			</div>
			<div class="panel-body">
				<%= link_to training.tr_name, training %>
			</div>
		</div>
	</div>

	<% end %>
</div>

<script>
	$(function(){

		$("#startdate").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m'
		});
	})
</script> 

<script>
	$(function(){

		$("#enddate").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m'
		});
	})
</script> 

<!--Deel weggelaten waar enddate wordt aangepast op startdate -->
