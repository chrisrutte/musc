<div class="container">
<%= form_tag search_path, method: :get do %>
<div class="row">
	<div class="col-md-4">
	<%= text_field_tag :search, params[:search], placeholder: "Waar ga jij trainen?", class: "form-control" %><br>
	</div>
	

	<div class="col-md-2">
	<%= text_field_tag :startdate, params[:startdate], placeholder: "Tussen", class: "form-control" %><br>
	</div>
	

	<div class="col-md-2">
	<%= text_field_tag :enddate, params[:enddate], placeholder: "en", class: "form-control" %><br>
	</div> 	 
	

	<div class="col-md-2 text-center">
	<%= submit_tag "Zoek je training", class: "btn btn-primary" %>
	</div>
</div>
<% end %>

<div class="row text-center home">

	<h1>Training every body</h1>
	<p>Geef jouw training of vind jouw training. Bootcamp voor iedereen.</p><br>

	<% if(!user_signed_in?) %>
		<%= link_to "Meld je meteen aan", new_user_registration_path, class: "btn btn-primary" %>
	<% else %>
		<%= link_to "Word trainer", new_training_path, class: "btn btn-primary" %>
	<% end %>

</div>

<br>

<br>

<div class="row">
<% @trainings.each do |training| %>

		<div class="col-md-4 col-sm-6 col-xs-12">
		<% if(!user_signed_in?) %>
			<div class="panel panel-default">
				<div class="panel-heading preview" style="background-image: url('<%= training.photos[0].image.url(:medium) if training.photos.length > 0 %>')">
					<% if false %>
					<%= image_tag training.photos[0].image.url(:medium) if training.photos.length > 0 %>
					<% end %>
				</div>
				<div class="panel-body">
					<%= training.tr_name %>
					<%= image_tag "star-on.png" %> <%= training.average_rating %> 
				</div>
			</div>
		<% else %>
			<%= link_to training, :class => "blacklink" do %>
				<div class="panel panel-default">
					<div class="panel-heading preview" style="background-image: url('<%= training.photos[0].image.url(:medium) if training.photos.length > 0 %>')">
						<% if false %>
						<%= image_tag training.photos[0].image.url(:medium) if training.photos.length > 0 %>
						<% end %>
					</div>
					<div class="panel-body">
						<strong><%= number_to_currency(training.tr_price, unit: 'â‚¬') %> <%= training.tr_name %></strong>
						<%= image_tag "star-on.png" %> <%= training.average_rating %><br>
						<small><%= training.tr_location %></small>
					</div>
				</div>
			<% end %>				

	<% end %>
	</div>

	<% end %>
</div>



