<div class="panel panel-default">
	<div class="panel-body">

		<!-- Image -->
		<div class="row">
			<div class="col-md-12">
				<%= image_tag @photos[0].image.url(), class: "img-responsive" if @photos.length > 0 %>
			</div>
		</div>

		<br>

		<!-- Main Intro -->
		<div class="row">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-3 text-center">
						<%= image_tag avatar_url(@training.user), class: "img-circle avatar-large" %><br><br>
						<%= @training.user.fullname %>
					</div>
					<div class="col-md-9">
						<h4><%= @training.tr_name %></h4>
						<%= @training.tr_location %>
						<div class="row text-center row-space-1">
							<div class="col-sm-3">
								<i class="fa fa-home fa-2x"></i>
							</div>

							<div class="col-sm-3">
								<i class="fa fa-bed fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-clock-o fa-2x"></i>
							</div>							
						</div>
						<div class="row text-center">
							<div class="col-sm-3">
								<%= @training.tr_intensity %>
							</div>
							<div class="col-sm-3">
								<%= @training.tr_max_attendants %> <%= @training.tr_max_attendants > 1? "Deelnemers" : "Deelnemer" %>
							</div>
							<div class="col-sm-3">
								<%= @training.tr_duration %> min
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
			<!-- Reservation form -->
				<%= render 'reservations/form' %>
			</div>
		</div>



		<div class="row">
			<div class="col-md-12">
				<h2>Over deze training</h2>
				<p><%= @training.tr_description %></p>
			</div>
		</div>

		<!-- Reviews -->
		<div class="row">
			<div class="col-md-12">
				<h3>Reviews <span id="average_rating"></span> (<%= @reviews.count %>)</h3>
				<div class="container">
					<div>
						<%= render 'reviews/form' if @booked && !@hasReview %>
					</div>
					<div>
						<%= render 'reviews/list' %>
						<br>
					</div>
				</div>
			</div>
		</div>




		<!-- Google Map -->
		<div class="row">
			<div class="col-md-12">
				
				<style>
				#map {
					width: 100%;
					height: 400px;
				}
				</style>

				<div id="map"></div>



			    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCiRstCee_M5mnbAKb4XRTDtaC80bwf-AQ&callback=initMap" async defer>
			    </script>

			    <script>
			      function initMap() {
			        // Create a map object and specify the DOM element for display.
			        var map = new google.maps.Map(document.getElementById('map'), {
			          center: {lat: <%= @training.latitude %>, lng: <%= @training.longitude %>},
			          scrollwheel: false,
			          zoom: 15
			        });

			        var marker = new google.maps.Marker({
			          position: {lat: <%= @training.latitude %>, lng: <%= @training.longitude %>},
			          map: map,
			          title: 'Training'
			        });
			      }

			    </script>


			</div>
		</div>



		<!-- Close by Rooms -->


		<h3>Ook dichtbij</h3>

		<div class="row">
			<% for training in @training.nearbys(5) %>

				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							<%= image_tag training.photos[0].image.url() if training.photos.length > 0 %>
						</div>
						<div class="panel-body">
							<%= link_to training.tr_name, training %><br>
							(<%= training.distance.round(1) %> miles away)
						</div>
					</div>
				</div>
			<% end %>
		</div>
		<% if false %>
		<% end %>
	
		<h3>Foto's</h3>

		<div class="row">
			<div class="col-md-12">

				<div id="myCarousel" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				<% if @photos %>
				  <ol class="carousel-indicators">
				  	<% @photos.each do |photo| %>
				    <li data-target="#myCarousel" data-slide-to="<% photo.id %>"></li>
				    <% end %>
				  </ol>
				  <% end %>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner" role="listbox">
				  	<% if @photos %>
				  	<% @photos.each do |photo| %>
					  	    <div class="item <%= 'active' if photo.id == @photos[0].id %>">
					      		<%= image_tag photo.image.url() %>
					       	</div>
					    <% end %>
				    <% end %>
				  </div>

				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>

			</div>
		</div>

	</div>
</div>

<script>
	$('#average_rating').raty({
		path: '/assets',
		readOnly: true,
		score: <%= @training.average_rating %>
	});

</script>
