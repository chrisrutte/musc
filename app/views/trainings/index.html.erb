<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Jouw lijst", trainings_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Jouw reserveringen", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Jouw trainingen", your_trips_path, class: "sidebar-link" %></li>	
		</ul>
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings </div>

			<div class="panel-body">

				<% @trainings.each do |training| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag training.photos[0].image.url(:thumb) if training.photos.length > 0 %>
						</div>
						<div class="col-md-7">
							<h4><%= training.tr_name %></h4>
						</div>
						<div class="col-md-3 right">
							<%= link_to "Update", edit_training_path(training), class: "btn btn-primary" %>
						</div>

					</div>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>
