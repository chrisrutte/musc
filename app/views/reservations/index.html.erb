<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Jouw lijst", trainings_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Jouw reserveringen", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Jouw trainingen", your_trips_path, class: "sidebar-link active" %></li>			
		</ul>
	</div>

	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Jouw trainingen </div>

			<div class="panel-body">

				<% @reservations.each do |reservation| %>
					<div class="row">

						<div class="col-md-2">
							<%= reservation.thrill.thrilldate.strftime('%v') %>
						</div>
						<div class="col-md-6">
							<%= link_to training_path(reservation.thrill.training) do %>
							<% image_tag reservation.thrill.training.photos[0].image.url(:thumb) %>
							<% end %>
						</div>
						<div class="col-md-2">
							<%= link_to user_path(reservation.thrill.training.user) do %>
							<%= image_tag avatar_url(reservation.thrill.training.user), class: "img-circle avatar-medium" %>
							<% end %>
						</div>
						<div class="col-md-2 right">
							<h4>â‚¬ <%= reservation.thrill.price %></h4>
						</div>



					</div>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>
